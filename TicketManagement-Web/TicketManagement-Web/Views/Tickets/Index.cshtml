@model IEnumerable<TicketManagement_Web.Models.Entities.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriorityLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @{
                    if (item.State == TicketManagement_Web.Models.Enums.TicketsState.Open)
                    {
                        <h5> <span class="badge badge-pill badge-primary">@Html.DisplayFor(modelItem => item.State)</span></h5>
                    }
                    else if (item.State == TicketManagement_Web.Models.Enums.TicketsState.Closed)
                    {
                        <h5> <span class="badge badge-pill badge-danger">@Html.DisplayFor(modelItem => item.State)</span></h5>
                    }
                    else if (item.State == TicketManagement_Web.Models.Enums.TicketsState.Withdrawn)
                    {
                        <h5> <span class="badge badge-pill badge-secondary">@Html.DisplayFor(modelItem => item.State)</span></h5>

                    }
                }


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriorityLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
